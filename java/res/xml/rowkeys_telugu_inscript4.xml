<merge
    xmlns:latin="http://schemas.android.com/apk/res-auto"
>
    <switch>
        <case
            latin:keyboardLayoutSetElement="alphabetManualShifted|alphabetShiftLocked|alphabetShiftLockShifted"
        >
            <!--Z ఎ TELUGU LETTER E-->
            <Key
                latin:keySpec="&#x0C0E;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--X ఁ TELUGU SIGN CANDRABINDU-->
            <Key
                latin:keySpec="&#x0C01;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--C ణ TELUGU LETTER NNA-->
            <Key
                latin:keySpec="&#x0C23;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <Key latin:keySpec="&#x0020;" />
            <Key latin:keySpec="&#x0020;" />

            <!--N ళ TELUGU LETTER LLA-->
            <Key
                latin:keySpec="&#x0C33;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--M శ TELUGU LETTER SHA-->
            <Key
                latin:keySpec="&#x0C36;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!-- U+0C37: TELUGU LETTER SSA -->
            <Key
                latin:keySpec="&#x0C37;"
                latin:moreKeys="&lt;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <Key
                latin:keySpec="&gt;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <Key
                latin:keySpec="\?"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
        </case>

        <default>
            <!--z ె TELUGU VOWEL SIGN E-->
            <Key
                latin:keySpec="&#x0C46;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--x ం TELUGU SIGN ANUSVARA-->
            <Key
                latin:keySpec="&#x0C02;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--c మ TELUGU LETTER MA-->
            <Key
                latin:keySpec="&#x0C2E;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--v న TELUGU LETTER NA-->
            <Key
                latin:keySpec="&#x0C28;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--b వ TELUGU LETTER VA-->
            <Key
                latin:keySpec="&#x0C35;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--n ల TELUGU LETTER LA-->
            <Key
                latin:keySpec="&#x0C32;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--m స TELUGU LETTER SA-->
            <Key
                latin:keySpec="&#x0C38;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <Key
                latin:keySpec=","
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <Key
                latin:keySpec="."
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--/ య TELUGU LETTER YA-->
            <Key
                latin:keySpec="&#x0C2F;"
                latin:moreKeys="/"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio|autoXScale" />
         </default>
    </switch>
</merge>
