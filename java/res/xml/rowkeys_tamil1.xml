<merge
    xmlns:latin="http://schemas.android.com/apk/res-auto"
>
    <switch>
        <case latin:keyboardLayoutSetElement="alphabetManualShifted|alphabetShiftLocked|alphabetShiftLockShifted"
        >
            <Key
                latin:keySpec="&#x0BB6;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keySpec="&#x0BB7;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keySpec="&#x0BB8;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keySpec="&#x0BB9;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="&#x0B9C;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keySpec="&#x0BB2;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio|autoXScale" />
            <Key
                latin:keySpec="&#x0B90;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio|autoXScale" />
            <Key
                latin:keySpec="&#x0BCB;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio|autoXScale" />
            <Key
                latin:keySpec="&#x0BC0;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio|autoXScale" />
            <Key
                latin:keySpec="&#x0BC2;"
                latin:keyLabelFlags="fontNormal" />
        </case>

        <default>
            <Key
                latin:keySpec="&#x0B9E;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keySpec="&#x0BB1;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keySpec="&#x0BA8;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keySpec="&#x0B9A;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keySpec="&#x0BB5;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keySpec="&#x0BB0;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keySpec="&#x0BC8;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio|autoXScale" />
            <Key
                latin:keySpec="&#x0BCA;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio|autoXScale" />
            <Key
                latin:keySpec="&#x0BBF;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio|autoXScale" />
            <Key
                latin:keySpec="&#x0BC1;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio|autoXScale" />
         </default>
    </switch>
</merge>
