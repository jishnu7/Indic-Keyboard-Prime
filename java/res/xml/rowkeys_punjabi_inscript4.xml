<merge
    xmlns:latin="http://schemas.android.com/apk/res-auto"
>
    <switch>
        <case
            latin:keyboardLayoutSetElement="alphabetManualShifted|alphabetShiftLocked|alphabetShiftLockShifted"
        >
            <!--Z ੱ GURMUKHI ADDAK-->
            <Key
                latin:keySpec="&#x0A71;"
                latin:keyLabelFlags="fontNormal" />

            <!--X ਫ਼ GURMUKHI LETTER FA-->
            <Key
                latin:keySpec="&#x0A5E;"
                latin:keyLabelFlags="fontNormal" />

            <!--C ਣ GURMUKHI LETTER NNA-->
            <Key
                latin:keySpec="&#x0A23;"
                latin:keyLabelFlags="fontNormal" />

            <!--V ਂ GURMUKHI SIGN BINDI-->
            <Key
                latin:keySpec="&#x0A02;"
                latin:keyLabelFlags="fontNormal" />

            <!--B ਞ GURMUKHI LETTER NYA-->
            <Key
                latin:keySpec="&#x0A1E;"
                latin:keyLabelFlags="fontNormal" />

            <!--N ਲ਼ GURMUKHI LETTER LLA-->
            <Key
                latin:keySpec="&#x0A33;"
                latin:keyLabelFlags="fontNormal" />

            <!--M ਸ਼ GURMUKHI LETTER SHA-->
            <Key
                latin:keySpec="&#x0A36;"
                latin:keyLabelFlags="fontNormal" />

            <!--\< ੳ GURMUKHI URA-->
            <Key
                latin:keySpec="&#x0A73;"
                latin:moreKeys="&lt;"
                latin:keyLabelFlags="fontNormal" />

            <!--\> ੲ GURMUKHI IRI-->
            <Key
                latin:keySpec="&#x0A72;"
                latin:moreKeys="&gt;"
                latin:keyLabelFlags="fontNormal" />

            <Key
                latin:keySpec="\?"
                latin:keyLabelFlags="fontNormal" />
        </case>

        <default>
            <!--z ੰ GURMUKHI TIPPI-->
            <Key
                latin:keySpec="&#x0A70;"
                latin:keyLabelFlags="fontNormal" />

            <!--x ਜ਼ GURMUKHI LETTER ZA-->
            <Key
                latin:keySpec="&#x0A5B;"
                latin:moreKeys="&#x0A74;"
                latin:keyLabelFlags="fontNormal" />

            <!--c ਮ GURMUKHI LETTER MA-->
            <Key
                latin:keySpec="&#x0A2E;"
                latin:keyLabelFlags="fontNormal" />

            <!--v ਨ GURMUKHI LETTER NA-->
            <Key
                latin:keySpec="&#x0A28;"
                latin:moreKeys="&#x262C;"
                latin:keyLabelFlags="fontNormal" />

            <!--b ਵ GURMUKHI LETTER VA-->
            <Key
                latin:keySpec="&#x0A35;"
                latin:keyLabelFlags="fontNormal" />

            <!--n ਲ GURMUKHI LETTER LA-->
            <Key
                latin:keySpec="&#x0A32;"
                latin:keyLabelFlags="fontNormal" />

            <!--m ਸ GURMUKHI LETTER SA-->
            <Key
                latin:keySpec="&#x0A38;"
                latin:keyLabelFlags="fontNormal" />

            <Key
                latin:keySpec=","
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keySpec="."
                latin:keyLabelFlags="fontNormal" />

            <!--/ ਯ GURMUKHI LETTER YA-->
            <Key
                latin:keySpec="&#x0A2F;"
                latin:moreKeys="/"
                latin:keyLabelFlags="fontNormal" />
         </default>
    </switch>
</merge>
