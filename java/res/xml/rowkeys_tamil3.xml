<merge
    xmlns:latin="http://schemas.android.com/apk/res-auto"
>
    <switch>
        <case
            latin:keyboardLayoutSetElement="alphabetManualShifted|alphabetShiftLocked|alphabetShiftLockShifted"
        >
            <Key
                latin:keySpec="&#x0BA3;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="&#x0B93;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keySpec="&#x0B8A;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="&#x0B8F;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keySpec="&#x0BC7;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio|autoXScale" />
            <Key
                latin:keySpec="&#x0BCC;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio|autoXScale" />
            <Key
                latin:keySpec="&#x0B86;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
        </case>

        <default>
            <Key
                latin:keySpec="&#x0BA3;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="&#x0B92;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keySpec="&#x0B89;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keySpec="&#x0B8E;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keySpec="&#x0BC6;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio|autoXScale" />
            <Key
                latin:keySpec="&#x0B94;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio|autoXScale" />
            <Key
                latin:keySpec="&#x0B85;"
                latin:keyLabelFlags="fontNormal" />
         </default>
    </switch>
</merge>
